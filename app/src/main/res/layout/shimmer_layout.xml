<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_margin="2dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/shimmer_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shimmer_profileIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sharp_circle"
                android:backgroundTint="#bdbdbd"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/shimmer_posted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/shimmer_profileIV"
                android:text="Full Name"
                android:layout_marginBottom="5dp"
                android:background="@color/shimmer_color"
                android:textColor="#bdbdbd" />

            <TextView
                android:id="@+id/shimmer_descriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shimmer_posted_by"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@id/shimmer_profileIV"
                android:maxLength="35"
                android:background="@color/shimmer_color"
                android:text="description A|| description B|"
                android:textColor="#bdbdbd" />

            <TextView
                android:id="@+id/shimmer_TimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shimmer_descriptionTV"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shimmer_profileIV"
                android:background="@color/shimmer_color"
                android:text="6h"
                android:layout_marginTop="5dp"
                android:textColor="#bdbdbd" />

            <ImageView
                android:id="@+id/shimmer_course_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/shimmer_TimeTV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/shimmer_color"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/shimmer_course_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shimmer_course_pic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Course Name"
                android:textColor="#bdbdbd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shimmer_course_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shimmer_course_user_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/nunito_sans_semibold"
                android:paddingBottom="10dp"
                android:textColor="#bdbdbd" />

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/shimmer_ReactionsTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shimmer_ll"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/shimmer_color"
        android:textSize="12sp"
        android:background="@color/shimmer_color"
        android:text="XYZ and 11 others" />

</androidx.constraintlayout.widget.ConstraintLayout>
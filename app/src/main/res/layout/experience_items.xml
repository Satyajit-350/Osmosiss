<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circularbordersolid"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/experience_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Android Developer"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/experience_placeTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="at TheIndianAppGuy"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/details_exp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:padding="1dp"
            android:src="@drawable/circleyellowfil" />

        <TextView
            android:id="@+id/dates_experince1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Sep 2010"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dates_experince2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Sep 2010"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
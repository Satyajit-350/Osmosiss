<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recruiter_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/person1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recruiter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/recruiter_image"
        app:layout_constraintTop_toTopOf="@+id/recruiter_image" />

    <TextView
        android:id="@+id/recruiter_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="Profession"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/recruiter_image"
        app:layout_constraintStart_toStartOf="@+id/recruiter_name"
        app:layout_constraintTop_toBottomOf="@+id/recruiter_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
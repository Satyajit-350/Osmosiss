<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    tools:context=".SignInAndSignUp.SignUpActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/circle_01"
        android:layout_marginRight="-50dp"
        android:layout_marginTop="-40dp"
        android:backgroundTint="#9e9e9e"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"   />
    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:text="Sign-up"
        android:textColor="#424242"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomtext1"
        app:layout_constraintTop_toBottomOf="@id/textt"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="#9e9e9e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsm has been dummy text ever since the 1500s,"
        />
    <EditText
        android:id="@+id/register_editTextName"
        android:hint="Name"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textColorHint="#bdbdbd"
        android:textColor="#424242"
        android:inputType="textCapSentences"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomtext1"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        />
    <EditText
        android:id="@+id/register_editTextEmail"
        app:layout_constraintTop_toBottomOf="@id/register_editTextName"
        android:hint="Email"
        android:textColorHint="#bdbdbd"
        android:textColor="#424242"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        />
    <EditText
        android:id="@+id/register_editTextPassword"
        app:layout_constraintTop_toBottomOf="@id/register_editTextEmail"
        android:hint="Password"
        android:textColorHint="#bdbdbd"
        android:textColor="#424242"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        />

    <RelativeLayout
        android:id="@+id/select_user_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/register_editTextPassword">

        <TextView
            android:id="@+id/selected_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Select UserType"
            android:padding="10dp"
            android:textColor="#424242"
            android:textColorHint="#bdbdbd"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>




    <Button
        android:id="@+id/registerBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:background="@drawable/sharp_rect_02"
        android:minWidth="120dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="#424242"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_user_type" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/already_have_account"
        app:layout_constraintTop_toBottomOf="@id/registerBtn"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="#9e9e9e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Already Registered? Login Here"
        />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/circle_01"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#90caf9"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
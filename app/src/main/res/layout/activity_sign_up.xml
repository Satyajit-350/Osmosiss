<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInAndSignUp.SignUpActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/circle_01"
        android:layout_marginRight="-50dp"
        android:layout_marginTop="-40dp"
        android:backgroundTint="#9e9e9e"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"   />
    <TextView
        android:id="@+id/textt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:text="Sign-up"
        android:textColor="#424242"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomtext1"
        app:layout_constraintTop_toBottomOf="@id/textt"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="#9e9e9e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsm has been dummy text ever since the 1500s,
"
        />
    <EditText
        android:id="@+id/emailtext"

        android:hint="Email"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:textColorHint="#bdbdbd"
        android:textColor="#424242"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomtext1"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        />
    <EditText
        android:id="@+id/passwordtext"
        app:layout_constraintTop_toBottomOf="@id/emailtext"
        android:hint="Password"
        android:textColorHint="#bdbdbd"
        android:textColor="#424242"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        />
    <EditText
        android:id="@+id/cpasswordtext"
        app:layout_constraintTop_toBottomOf="@id/passwordtext"
        android:hint="Confirm Password"
        android:textColorHint="#bdbdbd"
        android:textColor="#424242"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharp_rect_02"
        />
    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Sign Up"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#424242"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:background="@drawable/sharp_rect_02"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cpasswordtext"
        android:layout_centerHorizontal="true"
        android:minWidth="120dp"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/randomtext2"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        android:textSize="18sp"
        android:padding="20dp"
        android:textColor="#9e9e9e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Already Registered? Login Here"
        />
    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/circle_01"
        android:layout_marginLeft="-50dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#90caf9"
        app:layout_constraintBottom_toBottomOf="parent"/>

